! generic X defaults
! ==============================================================================

! fonts
Xft.dpi: 120
Xft.antialias: true
Xft.hinting: true
Xft.rgba: rgb
Xft.autohint: true
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

! special
*.foreground:   #ababab
*.background:   #000000
*.cursorColor:  #ababab

! black
*.color0:       #000000
*.color8:       #343434

! red
*.color1:       #e92f2f
*.color9:       #e92f2f

! green
*.color2:       #128812
*.color10:      #245324

! yellow
*.color3:       #dddd13
*.color11:      #dddd13

! blue
*.color4:       #568eb6
*.color12:      #568eb6

! magenta
*.color5:       #f996e2
*.color13:      #f996e2

! cyan
*.color6:       #23edda
*.color14:      #23edda

! white
*.color7:       #ababab
*.color15:      #ffffff

!! Transparency (0-255):
st.alpha: 230
!! Set a default font and font size as below:
!! *.font: Monospace-16;

! urxvt
! ==============================================================================

! configurations
#include </home/dimus/.my_urxvt/config>

! ! colours (urxvt specific)
! NOTE URxvt will use the colours specified in the generic X defaults
! uncomment below to use different theme for URxvt
! #include <~/.my_urxvt/themes/tempus/tempus_rift.Xcolors>

URxvt.font: xft:Hack:size=15
URxvt.boldFont: xft:Hack:bold:size=15
Urxvt.italicFont: xft:Hack:italic:size=15
Urxvt.bolditalicFont: xft:Hack:bold:italic:size=15

! Run `xrdb .Xresources` for update
